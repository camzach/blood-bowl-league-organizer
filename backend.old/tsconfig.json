{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "lib": ["ESNext"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "*.gen.ts"
  ]
}
