{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2022",
    "lib": ["es2022"],
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src"
  ],
}
